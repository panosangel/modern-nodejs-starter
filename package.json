{
  "name": "modern-nodejs-starter",
  "version": "1.0.0",
  "description": "A starting point for modern Node.js projects with TypeScript support and more!",
  "license": "MIT",
  "author": "Panos Angel (https://angelidakis.net)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panosangel/modern-nodejs-starter.git"
  },
  "type": "module",
  "scripts": {
    "start_node": "node --watch --experimental-strip-types --experimental-transform-types --no-warnings=ExperimentalWarning src/index.ts",
    "start_tsx": "tsx --watch src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix ",
    "format": "npx prettier --check .",
    "format:fix": "npx prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^22.13.13",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  }
}
